<%= form_with model: report, url: reports_path, class: "flex flex-col gap-4 sm:flex-row sm:items-end sm:gap-3 sm:justify-between" do |f| %>
  <div class="flex sm:flex-row flex-col sm:items-end gap-4 sm:gap-3">
    <div class="w-full sm:w-64">
      <%= f.label :user_id, "User", class: "block text-xs font-medium text-slate-600 mb-1.5" %>
      <%= f.collection_select :user_id, User.order(:name), :id, :name,
        { prompt: "Select user" },
        class: "block w-full rounded-lg border-slate-300 bg-white px-3 py-3 text-sm text-slate-900 shadow-sm ring-1 ring-slate-900/5 focus:border-slate-400 focus:ring-2 focus:ring-slate-400/20" %>
    </div>
    <div class="w-full sm:w-64">
      <%= f.label :report_type, "Report type", class: "block text-xs font-medium text-slate-600 mb-1.5" %>
      <%= f.select :report_type,
        Report.report_types.keys.map { |t| [t.titleize, t] },
        { prompt: "Select type" },
        class: "block w-full rounded-lg border-slate-300 bg-white px-3 py-3 text-sm text-slate-900 shadow-sm ring-1 ring-slate-900/5 focus:border-slate-400 focus:ring-2 focus:ring-slate-400/20" %>
    </div>
  </div>
  <%= f.button type: "submit",
    class: "shrink-0 inline-flex items-center justify-start gap-2 rounded-lg bg-slate-900 px-8 py-3 min-w-[10rem] text-base font-medium text-white shadow-sm hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors" do %>
    <svg class="size-4 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    Generate
  <% end %>
<% end %>
