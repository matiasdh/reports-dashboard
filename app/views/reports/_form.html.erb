<%= form_with model: report, url: reports_path, class: "flex flex-col gap-4 sm:flex-row sm:items-end sm:gap-3" do |f| %>
  <div class="flex-1 min-w-0">
    <%= f.label :user_id, "User", class: "block text-xs font-medium text-slate-600 mb-1.5" %>
    <%= f.collection_select :user_id, User.order(:name), :id, :name,
      { prompt: "Select user" },
      class: "block w-full rounded-lg border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm ring-1 ring-slate-900/5 focus:border-slate-400 focus:ring-2 focus:ring-slate-400/20" %>
  </div>
  <div class="flex-1 min-w-0">
    <%= f.label :report_type, "Report type", class: "block text-xs font-medium text-slate-600 mb-1.5" %>
    <%= f.select :report_type,
      Report.report_types.keys.map { |t| [t.titleize, t] },
      { prompt: "Select type" },
      class: "block w-full rounded-lg border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm ring-1 ring-slate-900/5 focus:border-slate-400 focus:ring-2 focus:ring-slate-400/20" %>
  </div>
  <%= f.submit "Generate",
    class: "shrink-0 rounded-lg bg-slate-900 px-5 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors" %>
<% end %>
