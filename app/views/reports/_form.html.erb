<%= form_with model: report, url: reports_path, class: "flex flex-col gap-4 md:flex-row md:items-end md:gap-3 md:justify-between" do |f| %>
  <div class="flex md:flex-row flex-col md:items-end gap-4 md:gap-3">
    <div class="w-full md:w-64">
      <%= f.label :user_id, "User", class: "block text-xs font-medium text-slate-600 mb-1.5" %>
      <%= f.collection_select :user_id, users, :id, :name,
        { prompt: "Select user" },
        class: form_select_input_classes %>
    </div>
    <div class="w-full md:w-64">
      <%= f.label :report_type, "Report type", class: "block text-xs font-medium text-slate-600 mb-1.5" %>
      <%= f.select :report_type,
        Report.report_types.keys.map { |t| [t.titleize, t] },
        { prompt: "Select type" },
        class: form_select_input_classes %>
    </div>
  </div>
  <%= f.button type: "submit",
    class: "w-full md:w-auto shrink-0 inline-flex items-center justify-center gap-2 rounded-lg bg-slate-900 px-8 py-3 min-w-0 md:min-w-[10rem] text-base font-medium text-white shadow-sm hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 transition-colors cursor-pointer" do %>
    <%= icon "document-plus", library: "heroicons", variant: "outline", stroke_width: 2, class: "h-5 w-5 shrink-0" %>
    Generate
  <% end %>
<% end %>
