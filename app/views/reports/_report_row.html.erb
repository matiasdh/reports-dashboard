<tr id="<%= dom_id(report) %>" class="group hover:bg-slate-50/80 transition-colors <%= 'animate-fade-out-background' if report.previously_new_record? %>">
  <td class="px-6 py-4 text-slate-600 text-sm"><%= report.report_type.titleize %></td>
  <td class="px-6 py-4">
    <%= tag.span report.status.humanize,
      class: status_badge_class(report.status) %>
  </td>
  <td class="px-6 py-4 text-slate-600 text-sm"><%= report.user.name %></td>
  <td class="px-6 py-4 text-slate-500 text-sm">
    <%= report.created_at.strftime("%b %d, %Y %H:%M") %>
  </td>
</tr>
