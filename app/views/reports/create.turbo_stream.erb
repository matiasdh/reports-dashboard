<% flash.each do |type, message| %>
  <% if message.present? %>
    <%= turbo_stream.append "toast_container" do %>
      <%= render "layouts/toast", type: type, message: message %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_stream.replace "report_form", partial: "reports/report_form_section", locals: { report: Report.new, users: @users } %>
<%= turbo_stream.prepend "reports_tbody", partial: "reports/report_row", locals: { report: @report } %>
<%= turbo_stream.remove "reports_empty_row" %>
