<% cell_classes = "px-4 py-3 sm:px-6 sm:py-4" %>
<% animation_class = 'animate-fade-out-background' if report.previously_new_record? || report.processing? %>

<div id="<%= dom_id(report) %>" class="report-item grid grid-cols-1 md:grid-cols-5 md:gap-4 group hover:bg-slate-50/80 transition-colors border-b border-slate-100 last:border-b-0 <%= animation_class %>" role="row">
  <div class="<%= cell_classes %> md:flex md:items-center" role="gridcell">
    <p class="text-xs font-medium text-slate-500 uppercase tracking-wider md:hidden">Report type</p>
    <p class="mt-0.5 md:mt-0 text-slate-600 text-sm md:font-normal font-medium"><%= report_type_label(report) %></p>
  </div>
  <div class="<%= cell_classes %> md:flex md:items-center" role="gridcell">
    <p class="text-xs font-medium text-slate-500 uppercase tracking-wider md:hidden">Status</p>
    <div class="mt-0.5 md:mt-0"><%= status_badge_html(report) %></div>
  </div>
  <div class="<%= cell_classes %> md:flex md:items-center" role="gridcell">
    <p class="text-xs font-medium text-slate-500 uppercase tracking-wider md:hidden">User</p>
    <p class="mt-0.5 md:mt-0 text-slate-600 text-sm"><%= report.user.name %></p>
  </div>
  <div class="<%= cell_classes %> md:flex md:items-center" role="gridcell">
    <p class="text-xs font-medium text-slate-500 uppercase tracking-wider md:hidden">Created</p>
    <p class="mt-0.5 md:mt-0 text-slate-500 text-sm"><%= report_formatted_created_at(report) %></p>
  </div>
  <div class="<%= cell_classes %> md:flex md:items-center md:justify-end pt-2 md:pt-0" role="gridcell">
    <%= render "reports/report_download_action", report: report %>
  </div>
</div>
