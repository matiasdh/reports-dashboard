<div id="reports_table">
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <%= render "reports/reports_table_header" %>
      <tbody class="divide-y divide-slate-100 [&_td]:h-[4.5rem] [&_td]:align-middle" id="reports_tbody">
        <% if pagy.count.positive? %>
          <%= render partial: "reports/report_row", collection: reports, as: :report %>
        <% else %>
          <%= render "reports/reports_empty_row" %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
