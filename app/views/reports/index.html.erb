<%= turbo_stream_from "reports" %>

<div class="space-y-10">
  <header class="flex sm:flex-row flex-col sm:justify-between sm:items-end gap-1">
    <div>
      <h1 class="font-semibold text-slate-900 text-2xl tracking-tight">Reports</h1>
      <p class="mt-0.5 text-slate-500 text-sm">Generate and view async reports.</p>
    </div>
  </header>

  <%= render "reports/report_form_section", report: @report, users: @users %>

  <%= render "reports/reports_list_frame", reports: @reports, pagy: @pagy %>
</div>
