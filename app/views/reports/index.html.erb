<%= turbo_stream_from "reports" %>

<div class="space-y-10">
  <header class="flex sm:flex-row flex-col sm:justify-between sm:items-end gap-1">
    <div>
      <h1 class="font-semibold text-slate-900 text-2xl tracking-tight">Reports</h1>
      <p class="mt-0.5 text-slate-500 text-sm">Generate and view async reports.</p>
    </div>
  </header>

  <%= render "reports/report_form_section", report: @report %>

  <section class="bg-white shadow-sm border border-slate-200/60 rounded-2xl ring-1 ring-slate-900/5 overflow-hidden">
    <div class="px-6 py-4 border-slate-100 border-b">
      <h2 class="font-medium text-slate-500 text-sm uppercase tracking-wider">Recent reports</h2>
    </div>

    <%= render "reports/reports_table", reports: @reports %>

    <% if @pagy.pages > 1 %>
      <div class="px-6 py-4 border-slate-100 border-t">
        <%== @pagy.series_nav(id: "pagy-reports", aria_label: "Reports pages", slots: 7) %>
      </div>
    <% end %>
  </section>
</div>
